features
    "Singleton Pattern" {abstract}
        mandatory
            "Initialization" {abstract}
                alternative
                    "Eager"
                    "Lazy"
            "Access Method" {abstract}
                alternative
                    "getInstance()"
                    "Static Field"
        optional
            "Thread Safety"
            String "Class Name"

constraints
    "Eager" => !"Thread Safety"
    "Static Field" => "Eager"